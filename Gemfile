source 'https://rubygems.org'

gem 'rails', '3.2.9'

gem 'sqlite3'


# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'
gem 'ember-rails'

gem 'thin'

group :test do
  gem 'capybara'
  gem 'database_cleaner'
  gem 'cucumber-rails', :require => false

  gem 'rb-fsevent'
  gem 'guard-spork'
  gem 'guard-cucumber'
end
